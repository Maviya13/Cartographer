{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "Copy Python Script",
            "type": "shell",
            "command": "cp",
            "args": [
                "src/extractors/python_ast_helper.py",
                "out/extractors/python_ast_helper.py"
            ],
            "dependsOn": "npm: compile",
            "problemMatcher": []
        }
    ]
}
